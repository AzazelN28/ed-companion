.Community__link
  position relative
  width 1024px
  height 160px
  border 1px solid transparent

.Community__link:hover
  border 1px solid $MAIN_COLOR

.Community__preview,
.Community__info
  position absolute
  left 0
  top 0
  width 100%
  height 100%

.Community__info
  box-sizing border-box
  padding 16px
  background linear-gradient(to right, rgba(0,0,0,0.75), rgba(0,0,0,0.25))

.Community__description
  max-width 50%
  text-shadow 2px 2px 0px #000, 0px 0px 16px #000
