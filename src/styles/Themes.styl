/**
 * Listado de temas
 */
.Themes
  display flex
  flex-direction column
  width 100%

.Theme
  display flex
  justify-content center
  align-items center
  width 100%
  border 1px solid transparent

.Theme:hover
  border 1px solid $MAIN_COLOR

.Theme__content
  position relative
  width 1000px
  height 159px

.Theme__preview,
.Theme__info,
.Theme__create
  position absolute
  left 0
  top 0
  width 100%
  height 100%

.Theme__info
  padding 16px
  background linear-gradient(to right, rgba(0,0,0,0.75), rgba(0,0,0,0) 25%)

.Theme__create
  display flex
  align-items center
  justify-content center

.Theme__create
  font-size 2rem
  text-shadow 0px 0px 16px #000

.Theme__metadata
  padding-left 16px

.Theme__contributors
  margin-bottom 8px

.Theme__info,
.Theme__contributors,
.Theme__radarFriendlies,
.Theme__radarHostiles
  text-shadow 2px 2px 0px #000, 0px 0px 8px #000

/**
 * Ventana de creaci√≥n de temas
 */
.ThemeCreate
  display flex
  flex-direction column
  width 100%
  height 100%

.ThemeCreate__content
  display flex

.ThemeCreate__preview
  display flex
  flex 1 0

.ThemeCreate__settings
  display flex
  flex-direction row

.ThemeCreate__settingsColumn
  display flex
  flex-direction column
